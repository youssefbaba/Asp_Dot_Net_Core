{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // user-defined logging
      "Microsoft.AspNetCore": "Warning" // predefined logging
    }
  },
  "AllowedHosts": "*",
  "TradingOptions": {
    "DefaultOrderQuantity": 100,
    "Top25PopularStocks": "AAPL,MSFT,AMZN,TSLA,GOOGL,GOOG,NVDA,BRK.B,META,UNH,JNJ,JPM,V,PG,XOM,HD,CVX,MA,BAC,ABBV,PFE,AVGO,COST,DIS,KO"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=StockAppDatabaseError;Integrated Security=True;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341" // Replace with your Seq server URL
        }
      }
    ]
  }
}
